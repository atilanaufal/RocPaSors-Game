<Page
    x:Class="RocPaSors.Page.NameBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RocPaSors.Page"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NameBox"
    d:DesignHeight="450"
    d:DesignWidth="1260"
    PreviewKeyDown="Press_Enter"
    mc:Ignorable="d">
    <Grid>
        <Grid Background="#393f54" Opacity="0.3" />
        <StackPanel
            Width="600"
            Height="300"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Style="{StaticResource NameBoxContainer}">
            <TextBox x:Name="EnterName" Style="{StaticResource NameFieldBox}" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    x:Name="Back"
                    Click="Back_ToStartUp"
                    Content="Back"
                    Style="{StaticResource NameBoxBtn}" />
                <Button
                    x:Name="Continue"
                    Click="Continue_ToGame"
                    Content="Continue"
                    Style="{StaticResource NameBoxBtn}" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
